<!DOCTYPE html>
<html>
  <head>
    <title>BooksProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<div class="container">
      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a></div>
      <% end %>
      <% if flash[:notice] %>
        <div class="alert alert-info"><%= flash[:notice] %><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
