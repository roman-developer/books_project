<div class="nested-fields">
	<div class="remove-chapter">
		<%= link_to_remove_association f do 
			fa_icon 'times'
			end %>
	</div>

	<div class="col-md-12">
    <div class="form-group row">
			<%= f.label :title, class: 'col-sm-2 col-form-label' %>
			<div class="col-sm-10"><%= f.text_field :title, class: "form-control" %></div>
		</div>
	</div>

	<div class="col-md-12">
    <div class="form-group row">
			<%= f.label :content, class: 'col-sm-2 col-form-label' %>
			<div class="col-sm-10"><%= f.text_area :content, class: "form-control" %></div>
		</div>
	</div>
</div>