<% if @book.persisted? %>
	<h2><%= I18n.t('books.edit_book') %>&nbsp;-&nbsp;<%= @book.title %></h2>
<% else %>
	<h2><%= I18n.t('books.create_book') %></h2>
<% end %>

<%= form_for @book, html:{class: "form-horizontal"}  do |f| %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>

  <div class="field">
  	<%= f.label :image, "#{I18n.t('books.new.image')}*", class: 'col-sm-2 col-form-label'%>
  	<div class="col-sm-10"><%= f.file_field :image %></div>
	</div>


	<h3><%= I18n.t('books.new.chapters') %></h3>

	<div class="chapters">
		<%= f.fields_for :chapters do|chapter| %>
			<%= render 'chapter_fields', f: chapter %>
		<% end %>
	</div>
	<%= link_to_add_association I18n.t('books.new.add_chapter'), f, :chapters, class: 'btn btn-primary', data: {association_insertion_node: '.chapters', association_insertion_method: :append} %>

	<% if @book.persisted? %>
		<%= f.submit I18n.t('books.new.update'), class: "btn btn-success" %>
	<% else %>
		<%= f.submit I18n.t('books.new.create'), class: "btn btn-success" %>
	<% end %>
<% end %>